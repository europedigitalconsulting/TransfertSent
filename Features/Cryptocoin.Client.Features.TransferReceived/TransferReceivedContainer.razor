@namespace Cryptocoin.Client.Feature.Transfer.Received
@code{

    [Parameter] public EventCallback ValidTransaction { get; set; }
    [Parameter] public string TypeReceived { get; set; }
    [Parameter] public string TxtAmountToSend { get; set; }
    [Parameter] public string BtnValidTransaction { get; set; }
    [Parameter] public string TxtUser { get; set; }
    [Parameter] public string Firstname { get; set; }
    [Parameter] public string Lastname { get; set; }
    [Parameter] public string QrCode { get; set; }
    [Parameter] public int? AmountToSend { get; set; }
    public ReceiveTypeQrCode ReceiveTypeQrCode;

}

<div class="row mb-4">
    <div class="col-lg-12">
        <div class="card p-3">
            @if (Page == 1)
            {
                <ReceiveTypeQrCode @ref="ReceiveTypeQrCode" Firstname="@Firstname" Lastname="@Lastname"
                                   TxtAmountToSend="@TxtAmountToSend" AmountToSend="AmountToSend"
                                   BtnValidTransaction="@BtnValidTransaction" ValidTransaction="ValidTransaction"
                                   TxtUser="@TxtUser" QrCode="QrCode"></ReceiveTypeQrCode>
            }

        </div>
    </div>
</div>